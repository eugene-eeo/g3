#!/usr/bin/env python

from pathlib import Path
import markdown2
import sys
import json


def get_config():
    with open('_g3/config.json', 'r') as fp:
        return json.load(fp)


def main(path):
    path = Path(path)
    if path.suffix != '.md':
        return

    src = Path('_g3') / path
    dst = Path('_g3/tmp') / (str(path.parent / path.stem) + '.render')
    dst.parent.mkdir(exist_ok=True, parents=True)

    with src.open('r') as r:
        # skip past metadata
        for line in r:
            if line.strip() == "":
                break
        with dst.open('w') as w:
            extras = get_config().get('extras', [])
            w.write(markdown2.markdown(r.read(), extras=extras))


if __name__ == '__main__':
    main(sys.argv[1])
