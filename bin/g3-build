#!/usr/bin/env bash
trap 'exit' ERR

for line in $(g3-walk); do
    case "$line" in
        *.md) g3-header "$line"
              g3-render "$line" ;;
        *) g3-copy "$line"
    esac
done

for line in $(g3-walk); do
    if [[ $line = *.md ]]; then
        g3-menu "$line"
        g3-html "$line"
    fi
done
