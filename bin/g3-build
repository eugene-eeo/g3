#!/usr/bin/env bash

for line in $(g3-walk); do
    case "$line" in
        *.md) g3-header "$line" &
              g3-render "$line" & ;;
        *) g3-copy "$line"
    esac
done
wait

for line in $(g3-walk); do
    if [[ $line = *.md ]]; then
        g3-menu "$line"
        g3-html "$line"
    fi
done
